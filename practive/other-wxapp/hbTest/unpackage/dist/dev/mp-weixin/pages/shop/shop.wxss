.flex {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: left;
	-webkit-justify-content: left;
	        justify-content: left;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.left {
	-webkit-box-flex: 0;
	-webkit-flex: none;
	        flex: none;
	width: 40%;
	height: 120px;
}
.right {
	-webkit-box-flex: 0;
	-webkit-flex: none;
	        flex: none;
	width: 70%
}
.item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
