
.container {
  overflow: auto;
  max-width: 960px;
  margin: 0 auto;
}
.uni-flex{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
   height: 500rpx;
  text-align: center;
  line-height: 500rpx;
}
.flex-item {
  width: 33.3%;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
}
.flex-item-V {
  width: 100%;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
}
.text {
  margin: 5rpx 10rpx;
  padding: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #777;
  font-size: 28rpx;
}
